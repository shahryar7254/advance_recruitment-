<odoo>
    <!-- ====== WIZARD FORM VIEW ====== -->
    <record id="view_cv_scan_wizard_form" model="ir.ui.view">
        <field name="name">cv.scan.wizard.form</field>
        <field name="model">advanced_recruitment.cv_scan_wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Top CVs">
                <sheet>
                    <group string="Job Requirements">
                        <group>
                            <label for="job_description" string="Enter Job Description"/>
                            <field name="job_description" widget="textarea"
                                   placeholder="Enter detailed job description, required skills, qualifications, etc..."
                                   nolabel="1" required="1"/>
                        </group>
                        <group>
                            <label for="top_n" string="Number of Top CVs to Select"/>
                            <field name="top_n" nolabel="1" required="1"/>
                        </group>
                    </group>

                    <group string="Upload CVs">
                        <label string="Upload Multiple CV Files - Select all files at once using CTRL+Click or SHIFT+Click"/>

                        <field name="multi_cv_files" widget="binary_many2many"
                               string="Select Multiple Files"
                               options="{'accepted_file_extensions': '.pdf,.docx', 'multiple': true}"
                               nolabel="1"/>

                        <div class="alert alert-info" role="alert">
                            <strong>Tip:</strong> Directly click "Select Multiple Files" and use CTRL+A or CTRL+Click to select multiple files at once.
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button string="Generate Top CVs"
                            type="object"
                            name="action_generate_top"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ====== MENU & ACTION ====== -->
    <menuitem id="menu_cv_scan_root"
              name="Scan CVs"
              parent="menu_advanced_recruitment_custom"
              sequence="20"/>

    <record id="action_cv_scan_wizard" model="ir.actions.act_window">
        <field name="name">Scan CVs</field>
        <field name="res_model">advanced_recruitment.cv_scan_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_cv_scan_action"
              name="Scan CVs"
              parent="menu_cv_scan_root"
              action="action_cv_scan_wizard"/>
</odoo>